<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1532423622396-10a3f979251a?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1350&q=80);">
  <div class="container text-center">

    <h1>Shakrr <span id="banner-typed-text"></span> !</h1>
    <p>Change your life and learn to drink at one of our bars around the world.</p>
    <%= link_to 'Add a new cocktail', new_cocktail_path, class: 'btn btn-primary' %>
  </div>
</div>

<div class="container mt-5 mb-5">
  <h1 class="mb-5">Our cocktails</h1>

    <div class="cards">

      <% @cocktails.each do |cocktail| %>

        <div class="card">
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path cocktail.photo, height: 300, width: 400, crop: :fill unless cocktail.photo.blank? %>)">
            <%= link_to cocktail.name, cocktail_path(cocktail) %>
          </div>
        </div>

      <% end %>
    </div>

</div>

